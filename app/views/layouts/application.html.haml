!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Golmatch
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'layouts/notifications'
    .header
      ゴルMATCH
      .user-name
        = current_user.name 
        -# kaneko
        .header-list
          = link_to edit_user_path(current_user) do
            %i.fas.fa-address-card
    = yield
    .footer
      %p Copyright © 2020 ゴルMATCH Inc. All Rights Reserved.
      .footer-list
        follow us!
        = link_to "https://www.facebook.com/", class: "contents__btn" do
          = icon('fab', 'facebook-square')
        = link_to "https://twitter.com/", class: "contents__btn" do
          = icon('fab', 'twitter')
        = link_to "https://www.instagram.com/", class: "contents__btn" do
          = icon('fab', 'instagram')
        = link_to "https://www.instagram.com/", class: "contents__btn" do
          = icon('fab', 'youtube')
