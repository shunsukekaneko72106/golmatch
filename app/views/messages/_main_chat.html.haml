.messages
  = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'ここにメッセージ内容を入力'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'paperclip', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit '送信', class: 'form__submit'
